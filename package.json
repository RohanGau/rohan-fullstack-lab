{
  "name": "rohan-fullstack-lab",
  "version": "1.0.0",
  "description": "Full-stack portfolio monorepo with Next.js, Express, and React Admin",
  "main": "index.js",
  "scripts": {
    "------------ BUILD ------------": "",
    "build:types": "pnpm --filter @fullstack-lab/types... build",
    "build:api": "pnpm --filter node-backend... build",
    "build:web": "pnpm --filter web... build",
    "build:admin": "pnpm --filter admin... build",
    "build": "pnpm build:types && pnpm build:api && pnpm build:web & pnpm build:admin & wait",
    "------------ API DEPLOY ------------": "",
    "api:deploy:stage": "fly deploy --config ./apps/api/fly.stage.toml --dockerfile ./apps/api/Dockerfile --remote-only",
    "api:deploy:prod": "fly deploy --config ./apps/api/fly.toml --dockerfile ./apps/api/Dockerfile --remote-only",
    "------------ WEB DEV ------------": "",
    "web:dev": "pnpm --filter web dev",
    "web:local": "pnpm web:build && cd apps/web && npx wrangler pages dev .vercel/output/static",
    "------------ WEB BUILD ------------": "",
    "web:build": "cd apps/web && npx @cloudflare/next-on-pages@latest",
    "web:build:stage": "dotenv -e apps/web/.env.stage -- pnpm web:build",
    "web:build:prod": "dotenv -e apps/web/.env.production -- pnpm web:build",
    "------------ WEB DEPLOY ------------": "",
    "web:deploy:stage": "cd apps/web && npx wrangler pages deploy .vercel/output/static --project-name=rohan-fullstack-lab --branch=develop",
    "web:deploy:prod": "cd apps/web && npx wrangler pages deploy .vercel/output/static --project-name=rohan-fullstack-lab",
    "------------ WORKER EMAIL ------------": "",
    "worker:email:dev": "cd apps/worker-email && npx wrangler dev",
    "worker:email:deploy": "cd apps/worker-email && npx wrangler deploy",
    "------------ FULL DEPLOY ------------": "",
    "web:stage": "pnpm web:build:stage && pnpm web:deploy:stage",
    "web:prod": "pnpm web:build:prod && pnpm web:deploy:prod",
    "------------ QUALITY ------------": "",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter node-backend test",
    "prepare": "husky"
  },
  "pnpm": {
    "overrides": {
      "react-router-dom": "7.8.0",
      "react-router": "7.8.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "portfolio",
    "monorepo",
    "nextjs",
    "express",
    "typescript"
  ],
  "author": "Rohan Kumar",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.13",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.6.2",
    "wrangler": "^4.28.1"
  }
}
