# MCP server -> API integration
# Use API /api/v1 endpoint
MCP_API_BASE_URL=http://localhost:5050/api/v1

# Server-side bearer token used to call protected API routes (blogs create/update)
# Prefer a dedicated scoped token for MCP usage.
MCP_API_BEARER_TOKEN=your-mcp-api-bearer-token

# Optional actor metadata propagated to API logs/audit
MCP_ACTOR_ID=mcp-assistant

# Optional request timeout for API calls
MCP_API_TIMEOUT_MS=10000

# Safety guard: keep false until you intentionally allow publish mutations
MCP_ALLOW_BLOG_PUBLISH=false
