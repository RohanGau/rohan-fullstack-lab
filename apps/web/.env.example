# ===========================================
# Next.js Web App Configuration
# ===========================================
# Copy this file to .env.local and fill in the values
# cp .env.example .env.local

# ===========================================
# API Configuration
# ===========================================
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:5050

# ===========================================
# Site Configuration
# ===========================================
# Public site URL (used for SEO, sitemap, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# CDN / Assets
# ===========================================
# R2 CDN URL for images and assets
NEXT_PUBLIC_CDN_URL=https://your-r2-public-url.r2.dev
R2_PUBLIC_BASE_URL=https://assets.yourdomain.com

# ===========================================
# Cloudflare Turnstile (CAPTCHA)
# ===========================================
# Get keys from: https://dash.cloudflare.com/turnstile
# Use test keys for development:
# Site Key: 1x00000000000000000000AA (always passes)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# ===========================================
# Error Tracking (Sentry) - Optional
# ===========================================
# Sentry DSN for frontend/runtime/server tracing
NEXT_PUBLIC_SENTRY_DSN=https://f13fbba238cdd1b87d14f0a0a3b5f262@o4510809464635392.ingest.us.sentry.io/4510849271201792
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# Analytics (Optional)
# ===========================================
# Cloudflare Web Analytics token
NEXT_PUBLIC_CF_WEB_ANALYTICS_TOKEN=

# Optional endpoint for forwarding web-vitals metrics (POST JSON)
NEXT_PUBLIC_WEB_VITALS_ENDPOINT=

# ===========================================
# Image Optimization
# ===========================================
# Keep false to use Next.js image optimization.
# Set true only if you need to disable optimization temporarily.
NEXT_DISABLE_IMAGE_OPTIMIZATION=false
